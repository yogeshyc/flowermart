<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AddingVendorActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/flower_logo"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor Information"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/vendor_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Vendor Name"
        android:textColor="@color/purple_500"
        android:gravity="center"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/purple_500"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/vendor_mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Vendor Mobile"
        android:textColor="@color/purple_500"
        android:gravity="center"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/purple_500"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/vendor_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Vendor Address"
        android:textColor="@color/purple_500"
        android:gravity="center"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/purple_500"
        android:layout_margin="20dp"/>
    <!--<EditText
        android:id="@+id/regi_mobile"
        android:layout_width="match_parent"
        android:textColorHint="@color/purple_500"
        android:layout_height="50dp"
        android:textColor="@color/purple_500"
        android:gravity="center"
        android:hint="Mobile"
        android:background="@drawable/edit_text"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/regi_password"
        android:layout_width="match_parent"
        android:textColorHint="@color/purple_500"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/purple_500"
        android:hint="Password"
        android:background="@drawable/edit_text"
        android:layout_margin="10dp"/>-->
    <Button
        android:id="@+id/add_vendor_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Add"
        android:background="@color/purple_500"
        android:textColor="@color/white"/>
</LinearLayout>