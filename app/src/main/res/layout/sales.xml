                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="Vehicle No"
                android:padding="5dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/vehicleNo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Weight"
                android:padding="5dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="Weight"
                android:padding="5dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/flowerWeight"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Rate"
                android:padding="5dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="Rate"
                android:padding="5dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/flowerRate"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Total Amount"
                android:padding="5dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="Amount"
                android:padding="5dp"
                android:gravity="center|left"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/totalAmount"/>

        </LinearLayout>
