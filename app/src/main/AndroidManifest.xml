<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softhub.flowermart">

    <application
        android:allowBackup="true"
        android:icon="@drawable/flower_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/flower_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlowerMart"
        android:usesCleartextTraffic="true">
        <activity android:name=".DriverListActivity"></activity>
        <activity android:name=".SalesListActivity" />
        <activity
            android:name=".EmployeePage"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".AddSaleActivity" />
        <activity android:name=".VendorListActivity" />
        <activity android:name=".FlowerListActivity" />
        <activity android:name=".AddingVendorActivity" />
        <activity android:name=".AddFlowerActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity
            android:name=".Home"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".AddPurchaseActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>